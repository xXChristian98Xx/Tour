<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grantour.tour.miperfil"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="226dp">
        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/adsfsdfsf"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fernando ku"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="21sp"/>

        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imagenes"
                    android:textSize="20sp"
                    android:textColor="@color/md_black_1000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/md_yellow_500"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fotos"
                    android:textSize="20sp"
                    android:textColor="@color/md_black_1000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/md_yellow_500"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitas"
                    android:textSize="20sp"
                    android:textColor="@color/md_black_1000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="10dp"
                    android:textColor="@color/md_yellow_500"/>

            </LinearLayout>


        </LinearLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>
    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="360dp"

        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="45dp">

        <LinearLayout

            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="29dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:hint="Nombre Completo"
                android:inputType="text"/>


        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:hint="Nombre de usuariox"
                android:inputType="text"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
              <EditText
                  android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_mail_black_24dp"
                android:layout_width="290dp"
                android:layout_height="40dp"
                android:hint="Correo electronico"
                android:inputType="text"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textStyle="bold"

            android:layout_marginLeft="290dp"
            android:layout_marginTop="440dp"
            android:background="@drawable/buttonstyle"
            android:drawableEnd="@drawable/ic_mode_edit_black_24dp"
            android:textColor="#fff" />

    </LinearLayout>
</FrameLayout>
