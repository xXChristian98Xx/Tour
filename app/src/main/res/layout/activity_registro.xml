<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grantour.tour.registro"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro de usuario"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >

        <EditText
            android:drawablePadding="10dp"
            android:id="@+id/txtNombreCompleto"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Nombre Completo"
            android:textColorHint="@color/white"
            android:drawableTint="@color/white"
            android:textColor="#fff"/>
        <EditText
            android:id="@+id/txtUsuario"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/ic_account_circle_black_24dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:hint="Nombre de usuario"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/txtCorreo"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/ic_mail_black_24dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Correo electronico"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/txtContrasenia"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:textColorHint="@color/white"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/txtConfirmarContra"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/white"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Confirmar contraseña"
            android:textColorHint="@color/white"
            android:inputType="textPassword"/>
        <Spinner
            android:id="@+id/spin"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"></Spinner>
        <Button
            android:id="@+id/btnGuardar"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/buttonstyle"
            android:drawableRight="@drawable/ic_check_black_24dp"
            android:drawableTint="@color/white"
            android:text="Registrarse"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>
